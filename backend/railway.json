{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": ". /opt/venv/bin/activate && python manage.py migrate --noinput && gunicorn TradeSimulator.wsgi:application --bind 0.0.0.0:$PORT --workers 3"
  }
}
